@model DataAccess.SA_User
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="renderer" content="ie-stand">
    <link type="text/css" href="../../Content/Style/login.css" rel="stylesheet"  />
 
    <title>智地数据库管理系统 - 登陆</title>

</head>

<body >

			    @using (Html.BeginForm("Login", "Account"))
                {
                            <div class="Main">
                                    <ul>
                                        <li class="top"></li>
                                        <li class="top2"></li>
                                        <li class="topA"></li>
                                        <li class="topB">

                                        <span class="spanLogo">
                                            <img src="../../Images/logoFull.png" />

                                        </span></li>
                                        <li class="topC"></li>
                                        <li class="topD">
                                            <ul class="login">
                                                <li></li>
                                                <li><span class="left">用户名：</span> <span class="spanRight">
                                                    @Html.TextBoxFor(u => u.Name, new { placeholder = "请输入用户名", @class = "form-control" })
                     
                                                </span></li>
                                                <li><span class="left">密&nbsp;&nbsp;&nbsp;码：</span> <span class="spanRight">
                                                    @Html.PasswordFor(u => u.Password, new { placeholder = "请输入密码", @class = "form-control" })
                                                </span></li>
                    
                                                <li><span class="errMsg">
                                                 @Html.ValidationSummary(true, "您的用户名或者密码错误")</span>
                
                    
                                                </li>
                    
                                            </ul>
                                        </li>
                                        <li class="topE"></li>
                                        <li class="middle_A"></li>
                                        <li class="middle_B"></li>
                                        <li class="middle_C">
                                        <input type="submit" value=""  id="btnSubmit"  />

                                        </li>
                                        <li class="middle_D"></li>
                                        <li class="bottom_A"></li>
                                        <li class="bottom_B">
                                            <h4 style="color:#eee;">技术支持 &copy; 上海智讯科技有限公司</h4>
                                        </li>
                                    </ul>
                                </div>          
          
			        
                }
		
</body>
</html>

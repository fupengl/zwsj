@section Content{
  @RenderSection("Content", false)
}

@section Script{

  <script>
    require(['ko', '../Resource/models/navigationSidebar'], function (ko, vm) {
      ko.applyBindings(vm, document.getElementById('header'));
    });
  </script>
  @RenderSection("Script", false)
}

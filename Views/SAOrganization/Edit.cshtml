            .Items(
                X.Button()
                    .ID("btnSave")
                    .Text("保存")
                    .Icon(Icon.TableSave)
                    .DirectEvents(
                        de =>
                        {
                            de.Click.Before = "return formValidation(App.FormPanelSA_Organization)";
                            de.Click.Url = Url.Action("Update", "SAOrganization");
                            de.Click.EventMask.ShowMask = true;
                            de.Click.FormID = "FormPanelSA_Organization";

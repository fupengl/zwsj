                    }
                 )
                .Hidden(false)
        )

        .TopBar(X.Toolbar()
            .ID("formToolbarKeHu")
            .Items(
                X.Button()
                    .ID("btnSave")
                    .Text("保存")
                    .Icon(Icon.TableSave)
                    .DirectEvents(
                        de =>
                        {
                            de.Click.Before = "return formValidation(App.FormPanelKeHu)";
                            de.Click.Url = Url.Action("Update", "KeHu");
                            de.Click.EventMask.ShowMask = true;
                            de.Click.FormID = "FormPanelKeHu";
                        }),
                X.Button()
                    .ID("btnCancel")
                    .Text("取消")
                    .Icon(Icon.Cancel)
                    .Listeners(l => l.Click.Handler = "#{windowKeHu}.hide()")
            )
        );
}

@(X.Window()
      .ID("windowKeHu")
      .Width(600)
      .Title("KeHu")
      .Resizable(false)
      .Icon(Icon.ApplicationForm)
      .CloseAction(CloseAction.Destroy)      
      .Items().Add(formPanel))      
);
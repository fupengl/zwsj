@model ZhiDiExt.Models.FileUploadModel
@{
    var X = Html.X();
}

@{
    var uploadForm = X.FormPanel()
        .ID("uploadForm")
        .Frame(true)
        .DefaultAnchor("100%")
        .BodyPadding(6)
        .FieldDefaults(def =>
        {
            def.MsgTarget = MessageTarget.Side;
        })
        .FieldDefaults(fd => fd.LabelWidth = 80)
        .Items(            
            X.FileUploadField()
                .ID("fileUploadField")
                .EmptyText("请选择需要上传的Excel文件")
                .FieldLabel("附件")
                .ButtonText("选择")
                .Icon(Icon.Attach)
                .Validator(v => v.Fn = "fileFormatCheck.checkExcelExtension")
        )
        .Listeners(l => l.ValidityChange.Handler = "#{SaveButton}.setDisabled(!valid);")
        .Buttons(
            X.Button()
                .ID("SaveButton")
                .Text("确定")
                .Disabled(true)
                .DirectEvents(de =>
                {
                    de.Click.Url = Url.Action("ExcelUploadClick");
                    de.Click.ExtraParams.Add(X.Parameter().Name("importDataType").Value(@Model.ImportDataType).Mode(ParameterMode.Value));
                    de.Click.IsUpload = true;
                    de.Click.CleanRequest = true;
                    de.Click.FormID = "uploadForm";
                    de.Click.Before = @"Ext.Msg.wait('正在上传文件...', '上传文件')";
                    de.Click.Failure = @"Ext.Msg.show({ 
                                title   : '提示', 
                                msg     : '文件上传错误', 
                                minWidth: 200, 
                                modal   : true, 
                                icon    : Ext.Msg.ERROR, 
                                buttons : Ext.Msg.OK 
                            });";
                    de.Click.Success = "#{ExcelFileUpload}.close();document.getElementById('btnRefresh').click();";
                }),

            X.Button()
                .Text("取消")
                .OnClientClick("#{ExcelFileUpload}.close();")
        );
}

@(X.Window()
.ID("ExcelFileUpload")
      .Width(400)
      .Title(@Model.Title)
      .Resizable(false)
      .Icon(Icon.ApplicationForm)
      .CloseAction(CloseAction.Destroy)
      .Items().Add(uploadForm))
);